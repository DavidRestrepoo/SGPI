@model SGPI.Models.TblUsuario
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutSGPI";
}
@if (ViewBag.mensaje != null)
{
    <h1>@ViewBag.mensaje;</h1>
}
<center>
    <h1>Login</h1>

    <form method="post">
        <div class="form-group">
            <b><label for="usuariotxt">Usuario</label></b>
            <input asp-for="NumeroDocumento" type="text" class="form-control col-sm-4" id="usuariotxt" required />
        </div>


        <div class="form-group">
            <b><label for="passwordtxt">Contraseña</label></b>
            <input asp-for="VcPassword" type="password" class="form-control col-sm-4" id="passwordtxt" required />
        </div>

        <a href="/Administrador/OlvidarContrasena" id="recuperarPass">¿Olvidaste la contraseña?</a>
        <br />
        <button id="ingresarbtn" class="btn btn-danger" type="submit">Ingresar</button>
    </form>
</center>