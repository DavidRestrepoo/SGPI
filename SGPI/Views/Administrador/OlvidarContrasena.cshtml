@{
    ViewData["Title"] = "OlvidarContrasena";
}

<center>
    <h1>Olvidar la Contraseña</h1>

    <form action="">
        <div class="form-group">
            <b><label for="usuariotxt">Usuario</label></b>
            <input type="text" class="form-control col-sm-4" id="usuariotxt" required />
        </div>
        <div class="form-group">
            <b><label for="emailtxt">Correo Electronico</label></b>
            <input type="email" class="form-control col-sm-4" id="emailtxt" required />
        </div>
        <br />
        <a href="/Administrador/Login"><input id="sendbtn" type="button" class="btn btn-outline-danger" value="Enviar"></a>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/Administrador/Login"><input class="btn btn-outline-danger" id="backbtn" type="button" value="Volver"></a>
    </form>
</center>